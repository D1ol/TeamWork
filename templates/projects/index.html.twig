{% extends 'base.html.twig' %}

{% block title %}Projects list{% endblock %}

{% block menu_projects %}active{% endblock %}
{% block stylesheets %}

    <link href="{{ asset('assets/node_modules/sweetalert/sweetalert.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('assets/dist/css/pages/user-card.css') }}" rel="stylesheet" type="text/css">


{% endblock %}

{% block body %}
    {{ dump() }}
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Our clients</h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Home</a></li>
                    <li class="breadcrumb-item active">New</li>
                </ol>
                <a href="{{ path('project_add') }}" class="btn btn-info d-none d-lg-block m-l-15"><i class="fa fa-plus-circle"></i> Create Project</a>
            </div>
        </div>
    </div>

    <div class="row">
        {% for project in projects %}
        <div class="col-md-4 col-sm-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 col-sm-4 text-center">
                            <div class="m-l-30 m-t-20 img-circle img-responsive" style="width:60px; height:60px; background-color: {{ project.clientColor }}"></div>
                        </div>
                        <div class="col-md-8 col-sm-8">
                            <h5 class="card-title m-b-0"> {{project.name}}</h5>
                            <small>{% if project.isActive %} Aktywny  {% else %} Nie aktywny{% endif %}</small>
            <p>
                            <info>
                                {{project.description}}
                                <br/>
                                <br/>
                                {{project.clientName}}
                            </info>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/node_modules/sweetalert/sweetalert.min.js') }}"></script>
    <script src="{{ asset('assets/node_modules/sweetalert/jquery.sweet-alert.custom.js') }}"></script>
    <script>
        {% for flash in app.session.flashBag.get('success') %}
        swal({
            title: "new user!",
            text: "{{ flash }}",
            type: "success",
            timer: 5000,
        });
        {% endfor %}
        {% for flash in app.session.flashBag.get('error') %}
        swal({
            title: "error!",
            text: "{{ flash }}",
            type: "error",
            timer: 5000,
        });
        {% endfor %}
    </script>
{% endblock %}
