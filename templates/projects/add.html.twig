{% extends 'base.html.twig' %}

{% block title %}Create project{% endblock %}

{% block menu_projects %}active{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/node_modules/datatables/media/css/dataTables.bootstrap4.css') }}" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    {#{{ dump() }}#}

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Update team</h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Home</a></li>

                </ol>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="offset-3 col-6">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form,{'attr':{'class':'form-material m-t-40'}}) }}

                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.description) }}
                        {{ form_errors(form.description) }}
                        {{ form_widget(form.description) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.client) }}
                        {{ form_errors(form.client) }}
                        {{ form_widget(form.client) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.users) }}
                        {{ form_errors(form.users) }}
                        {{ form_widget(form.users) }}
                    </div>
                    {{ form_end(form) }}


                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/node_modules/sweetalert/sweetalert.min.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        {% for flash in app.session.flashBag.get('success') %}
        swal({
            title: "Team updated!",
            text: "{{ flash }}",
            type: "success",
            timer: 5000,
        });
        {% endfor %}
        {% for flash in app.session.flashBag.get('error') %}
        swal({
            title: "error!",
            text: "{{ flash }}",
            type: "error",
            timer: 5000,
        });
        {% endfor %}
        $(document).ready(function() {
            $('.js-example-basic-multiple').select2();
        });
    </script>
{% endblock %}
