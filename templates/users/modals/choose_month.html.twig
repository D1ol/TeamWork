<div id="modalChooseMonth" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="vcenter" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            {{ form_start(form) }}
            <div class="modal-header">
                <h4 class="modal-title" id="vcenter">{{ form_label(form.month) }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    {{ form_widget(form.month) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.user) }}
                </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(form.submit) }}
                <button type="button" class="btn btn-info waves-effect" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>